{
  "name": "swell_home_server",
  "version": "0.0.1",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "babel-core": "6.14.0",
    "express": "4.13.3"
  },
	"lint-staged": {
		 "./**/*.{js,jsx,json}": [
	     "prettier --single-quote --write",
	     "git add"
	   ]
	 },
  "scripts": {
    "start": "concurrently \"yarn server\" \"yarn client\" \"yarn lint\"",
    "server": "node server.js",
    "client": "node start-client.js",
    "lint": "eslint . --ext .js,.jsx --quiet",
		"precommit": "lint-staged",
		"heroku-postbuild": "yarn --cwd client --production=false && yarn build --cwd client --production=false"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^8.1.2",
    "concurrently": "^3.1.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "2.1.1",
    "eslint-config-react": "1.1.7",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-react": "7.4.0",
    "prettier": "^1.10.2",
		"husky": "^0.14.3",
		"lint-staged": "^6.0.0"
  }
}
